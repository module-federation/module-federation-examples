{
  "name": "clo",
  "version": "0.0.1",
  "description": "Create React app Running with rsbuild",
  "workspaces": [
    "./host",
    "./remote"
  ],
  "scripts": {
    "start": "pnpm --filter clo_* start",
    "build": "pnpm --filter clo_* build",
    "preview": "pnpm run build && concurrently \"pnpm --filter clo_host preview\" \"pnpm --filter clo_remote preview\"",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "e2e:ci": "pnpm exec playwright test --reporter=list"
  },
  "devDependencies": {
    "wait-on": "7.2.0",
    "concurrently": "8.2.2",
    "forever": "4.0.3",
    "@playwright/test": "^1.54.2",
    "playwright": "^1.54.2"
  }
}
