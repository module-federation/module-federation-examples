{
  "private": true,
  "workspaces": {
    "packages": [
      "host",
      "remote"
    ]
  },
  "scripts": {
    "start": "concurrently 'cd ./host && yarn start' 'cd ./remote && yarn start'",
    "build": "concurrently 'cd ./host && yarn build' 'cd ./remote && yarn build'",
    "test": "concurrently 'cd ./host && yarn serve' 'cd ./remote && yarn serve'"
  },
  "devDependencies": {
    "concurrently": "7.3.0"
  }
}
