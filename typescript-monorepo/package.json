{
  "name": "typescript-monorepo",
  "scripts": {
    "start": "lerna run --scope=typescript-monorepo_app* --parallel start",
    "build": "lerna run --scope=typescript-monorepo_app* --parallel build",
    "serve": "lerna run --scope=typescript-monorepo_app* --parallel serve",
    "clean": "lerna run --scope=typescript-monorepo_app* --parallel clean"
  },
  "devDependencies": {
    "lerna": "3.22.1"
  },
  "workspaces": ["app1/*", "app2/*"]

}
