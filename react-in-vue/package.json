    "clean": "pnpm run --filter react-in-vue_* --parallel clean",
    "e2e:ci": "playwright test --reporter=list",
    "e2e": "playwright test"
  },
  "devDependencies": {
    "@babel/preset-react": "7.24.7",
    "wait-on": "7.2.0",
    "@playwright/test": "^1.54.2"
  }
