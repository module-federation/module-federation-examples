{
  "name": "federated-css-react-ssr",
  "version": "1.0.0",
  "description": "Example of server side rendering with module federation using React 18 and different types of component styling",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm --parallel --filter federated-css-react-ssr_* build",
    "start": "pnpm --parallel --filter federated-css-react-ssr_* start",
    "e2e": "playwright test",
    "e2e:ci": "node scripts/kill-all-ports.cjs && playwright test --reporter=list",
    "legacy:e2e:ci": "node scripts/kill-all-ports.cjs && playwright test --reporter=list",
    "e2e:headed": "playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "kill-port": "2.0.1",
    "react-jss": "10.10.0",
    "wait-on": "7.2.0"
  }
}
