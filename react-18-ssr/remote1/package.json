{
  "name": "react-ssr_remote1",
  "version": "0.0.0",
  "scripts": {
    "start": "pnpm build && pnpm serve",
    "serve": "npx serve dist/ -p 3001",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "rimraf dist/client && webpack --mode production --config config/webpack.client.js",
    "build:server": "rimraf dist/server && webpack --mode production --config config/webpack.server.js"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "regenerator-runtime": "0.13.11"
  },
  "devDependencies": {
    "@babel/core": "7.23.3",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.23.3",
    "@babel/preset-react": "7.23.3",
    "@babel/preset-typescript": "7.23.3",
    "@module-federation/node": "1.0.5",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "babel-loader": "8.2.5",
    "html-webpack-plugin": "5.5.0",
    "rimraf": "3.0.2",
    "webpack": "5.80.0",
    "webpack-cli": "4.9.2",
    "webpack-merge": "5.8.0"
  }
}
