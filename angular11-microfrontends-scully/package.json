{
  "name": "angular11-microfrontends-scully",
  "private": true,
  "workspaces": [
    "./projects/*"
  ],
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start:shell": "ng serve",
    "start:profile": "ng serve mdmf-profile",
    "start:product": "ng serve mdmf-product",
    "build:shared": "ng build mdmf-shared",
    "build:shell": "ng build mdmf-shell --prod",
    "build:profile": "ng build mdmf-profile --prod",
    "build:product": "ng build mdmf-product --prod",
    "test": "ng test mdmf-shared & ng test mdmf-profile & ng test mdmf-product & ng test mdmf-shell",
    "lint": "ng lint",
    "e2e": "ng e2e mdmf-profile & ng e2e mdmf-shell",
    "scully:light": "scully",
    "scully:serve": "scully serve",
    "scully:route": "scully --scanRoutes",
    "scully:debug": "scully --scanRoutes --stats --showGuessError --watch --logSeverity=normal",
    "e2e:ci": "yarn build:shared && yarn start:shell & wait-on http-get://localhost:4200/ && yarn start:profile & wait-on http-get://localhost:4201/ && yarn start:product & wait-on http-get://localhost:4202/ && npx cypress run --config-file ../cypress/config/cypress.config.ts --config '{\"supportFile\": \"../cypress/support/e2e.ts\"}' --spec \"./e2e/*.cy.ts\" --browser=chrome"
  },
  "resolutions": {
    "webpack": "5.80.0"
  },
  "dependencies": {
    "@angular/animations": "11.2.14",
    "@angular/common": "11.2.14",
    "@angular/compiler": "11.2.14",
    "@angular/core": "11.2.14",
    "@angular/forms": "11.2.14",
    "@angular/platform-browser": "11.2.14",
    "@angular/platform-browser-dynamic": "11.2.14",
    "@angular/router": "11.2.14",
    "@ngrx/router-store": "^11.0.0-beta.0",
    "@ngrx/store": "^11.0.0-beta.0",
    "@scullyio/init": "^1.0.1",
    "@scullyio/ng-lib": "^1.0.0",
    "@scullyio/scully": "^1.0.0",
    "bootstrap": "^4.5.3",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "10.0.1",
    "@angular-devkit/build-angular": "0.1102.19",
    "@angular/cli": "11.2.19",
    "@angular/compiler-cli": "11.2.14",
    "@ngrx/store-devtools": "11.1.1",
    "@types/jasmine": "4.3.1",
    "@types/jasminewd2": "2.0.10",
    "@types/node": "12.20.55",
    "codelyzer": "6.0.2",
    "jasmine-core": "4.2.0",
    "jasmine-spec-reporter": "5.0.2",
    "karma": "6.4.2",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.0",
    "karma-jasmine": "4.0.2",
    "karma-jasmine-html-reporter": "1.7.0",
    "ng-packagr": "11.0.0-next.3",
    "ngx-build-plus": "10.1.1",
    "protractor": "7.0.0",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typescript": "4.0.2",
    "wait-on": "7.0.1"
  }
