{
  "name": "automatic-vendor-sharing",
  "private": true,
  "workspaces": [
    "app1/*",
    "app2/*"
  ],
  "scripts": {
    "start": "npx lerna run --scope=automatic-vendor-sharing_app* --parallel start",
    "build": "npx lerna run --scope=automatic-vendor-sharing_app* --parallel build",
    "serve": "npx lerna run --scope=automatic-vendor-sharing_app* --parallel serve",
    "clean": "npx lerna run --scope=automatic-vendor-sharing_app* --parallel clean",
    "e2e:ci": "yarn start & wait-on http-get://localhost:3001/ && npx cypress run --config-file ../../cypress/config/cypress.config.ts --config '{\"supportFile\": \"../../cypress/support/e2e.ts\"}' --spec \"./e2e/*.cy.ts\" --browser=chrome"
  },
  "devDependencies": {
    "lerna": "3.22.1",
    "wait-on": "7.0.1"
  }
}
