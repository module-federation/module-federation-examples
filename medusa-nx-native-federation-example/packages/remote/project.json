{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/remote/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "native-federation-plugin:build",
      "options": {
        "outputPath": "dist/remote"
      }
    },
    "serve": {
      "executor": "@nrwl/web:file-server",
      "options": {
        "buildTarget": "remote:build",
        "port": 3004,
        "watch": true
      }
    },
    "dashboard": {
      "executor": "native-federation-plugin:dashboard",
      "options": {
        "buildTarget": "remote:build",
        "tokenFile": ".env",
        "environment": "development",
        "versionStrategy": "Date",
        "filename": "dashboard.json",
        "dashboardUrl": "{DASHBOARD_BASE_URL}/update?token={DASHBOARD_WRITE_TOKEN}",
        "metadata": {
          "baseUrl": "http://localhost:3004",
          "source": {
            "url": "https://github.com/module-federation/module-federation-examples/tree/medusa-nx-nfp-example/medusa-nx-native-federation-example/packages/remote"
          },
          "remote": "http://localhost:3004/remoteEntry.js"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/remote/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/remote"],
      "options": {
        "jestConfig": "packages/remote/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
