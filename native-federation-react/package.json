{
  "name": "native-federation-react",
  "private": true,
  "ignored": true,
  "workspaces": [
    "./host",
    "./remote"
  ],
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:remote": "tsc build/build-remote.ts --outDir dist && node dist/build-remote.js",
    "build:host": "tsc build/build-host.ts --outDir dist && node dist/build-host.js",
    "build": "pnpm run build:remote && npm run build:host",
    "start:remote": "pnpx serve dist/remote -l 3001 --cors",
    "start:host": "pnpx serve dist/host -l 3000",
    "start": "concurrently \"npm run start:remote\" \"npm run start:host\"",
    "test:e2e": "pnpm exec playwright test",
    "test:e2e:ui": "pnpm exec playwright test --ui",
    "test:e2e:debug": "pnpm exec playwright test --debug",
    "e2e:ci": "pnpm run build && pnpm exec playwright test --reporter=list"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@hyrious/esbuild-plugin-commonjs": "0.2.6",
    "@playwright/test": "1.57.0",
    "@softarc/native-federation": "3.3.1",
    "@softarc/native-federation-runtime": "3.3.1",
    "@types/node": "24.2.1",
    "@types/react": "19.1.10",
    "@types/webpack": "5.28.5",
    "cjs-exports-parser": "0.1.1",
    "concurrently": "9.2.0",
    "esbuild": "0.25.9",
    "json5": "2.2.3",
    "playwright": "1.57.0",
    "serve": "14.2.4",
    "wait-on": "8.0.4"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}