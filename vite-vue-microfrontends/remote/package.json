{
  "name": "vite-vue-microfrontends_remote",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "run-p vite:dev force-vite-restart",
    "vite:dev": "vite --port 4174",
    "build": "run-p type-check build-only",
    "preview": "nohup vite preview --port 4174 &",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "force-vite-restart": "node ../shared/forceViteRestart.js"
  },
  "dependencies": {
    "pinia": "^2.0.28",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@module-federation/vite": "^0.2.6",
    "@rushstack/eslint-patch": "^1.1.4",
    "@softarc/native-federation-esbuild": "1.1.1",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "3.0.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "esbuild-plugin-vue-next": "^0.1.4",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.5",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vue-tsc": "^1.0.12"
  }
}
