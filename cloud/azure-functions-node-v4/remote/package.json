{
  "name": "remote-azf",
  "version": "1.0.0",
  "description": "remote application",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npx serve dist/ -p 8080",
    "build": "npm run build:client && npm run build:server",
    "build:client": "rimraf dist/client && webpack --mode development --config config/webpack.client.js",
    "build:server": "rimraf dist/server && webpack --mode development --config config/webpack.server.js"
  },
  "devDependencies": {
    "@babel/core": "7.24.7",
    "@babel/preset-react": "7.24.7",
    "@babel/preset-typescript": "7.24.7",
    "@module-federation/enhanced": "0.6.8",
    "@module-federation/node": "2.5.18",
    "babel-loader": "9.1.3",
    "html-webpack-plugin": "5.6.0",
    "rimraf": "5.0.8",
    "tsconfig-paths-webpack-plugin": "4.1.0",
    "webpack": "5.95.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "5.0.4",
    "webpack-livereload-plugin": "3.0.2"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}