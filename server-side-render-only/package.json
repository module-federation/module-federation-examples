  "author": {
    "name": "Pini Tayeb"
  },
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.18.9",
    "@babel/preset-react": "7.18.6",
    "babel-loader": "8.2.5",
    "concurrently": "7.3.0",
    "nodemon": "2.0.18",
    "lerna": "3.22.1",
    "webpack": "5.72.1",
    "webpack-cli": "4.9.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
