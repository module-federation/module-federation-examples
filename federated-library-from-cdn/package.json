{
  "name": "federated-library-from-cdn",

  "workspaces": [
    "./app1",
    "./app2",
    "./remoteLibrary"
  ],
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently 'cd remoteLibrary; npm run dev'",
    "build": "concurrently 'cd remoteLibrary; npm run build'",
    "start": "concurrently 'cd app1; npm run start' 'cd app2; npm run start'"
  },
  "devDependencies": {
    "concurrently": "^8.2.1"
  }
}
