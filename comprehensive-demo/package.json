{
  "name": "mfe-demo-root",
  "private": true,
  "scripts": {
    "build": "yarn workspaces run build",
    "serve": "wsrun --parallel serve",
    "clean": "wsrun --parallel clean",
    "start": "concurrently \"wsrun --parallel start\" \"wsrun --parallel serve\""
  },
  "workspaces": {
    "packages": [
      "app-*"
    ],
    "nohoist": [
      "**/svelte",
      "**/svelte/**",
      "**/svelte-loader",
      "**/svelte-loader/**"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "wsrun": "^5.2.0"
  }
}
