{
  "name": "umd-federation",
  "private": true,
  "version": "1.0.0",
  "description": "UMD output target for Module Federation",
  "main": "index.js",
  "scripts": {
    "preinstall": "pnpm install --ignore-scripts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "pnpm --filter umd-federation_app* --parallel start",
    "test:e2e": "pnpm exec playwright test",
    "test:e2e:ui": "pnpm exec playwright test --ui",
    "test:e2e:debug": "pnpm exec playwright test --debug",
    "e2e:ci": "pnpm exec playwright install --with-deps && pnpm exec playwright test --reporter=list"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "playwright": "^1.54.2",
    "umfjs": "0.3.7"
  }
}
