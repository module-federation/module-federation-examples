{
  "name": "module-federation-examples-root",
  "version": "0.0.0",
  "description": "Examples showcasing Webpack 5's Module Federation",
  "repository": "https://github.com/module-federation/module-federation-examples.git",
  "author": "Zack Jackson <zackary.l.jackson@gmail.com> (https://github.com/ScriptedAlchemy)",
  "contributors": [
    "Prasanna Mestha <prasanna@privjs.com> (https://github.com/prasannamestha)"
  ],
  "license": "MIT",
  "private": true,
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.10",
      "@types/react-dom": "18.3.0"
    },
    "onlyBuiltDependencies": [
      "@module-federation/nextjs-mf",
      "@parcel/watcher",
      "@swc/core",
      "core-js",
      "core-js-pure",
      "esbuild",
      "fsevents",
      "nice-napi",
      "nx",
      "unrs-resolver",
      "yorkie"
    ]
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@swc/plugin-styled-components": "12.1.0",
    "@types/node": "20.9.0",
    "abbrev": "2.0.0",
    "allure-commandline": "2.29.0",
    "asn1": "0.2.6",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "cross-spawn": "7.0.3",
    "forever": "4.0.3",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "js-yaml": "4.1.0",
    "kill-port": "2.0.1",
    "lerna": "8.1.8",
    "lint-staged": "^15.2.10",
    "mocha": "10.6.0",
    "prettier": "3.3.3",
    "pretty-quick": "4.0.0",
    "semver": "7.6.3",
    "typescript": "5.5.3"
  },
  "scripts": {
    "list:all": "pnpm list --filter \"*\" --only-projects --depth -1 --json",
    "list:changed": "pnpm list --filter \"...[origin/master]\" --only-projects --depth -1 --json",
    "build": "pnpm --filter --parallel build",
    "ci:playwright:install": "playwright install chromium",
    "ci:playwright:install-deps": "playwright install-deps chromium",
    "submodules": "git pull --recurse-submodules",
    "prettier": "prettier --write \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "prettier:check": "prettier --list-different \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "test": "jest --config=jest.config.cjs --maxWorkers=2",
    "preinstall": "npx only-allow pnpm"
  }
}
