{
  "name": "module-federation-examples-root",
  "version": "0.0.0",
  "description": "Examples showcasing Webpack 5's Module Federation",
  "repository": "https://github.com/module-federation/module-federation-examples.git",
  "author": "Zack Jackson <zackary.l.jackson@gmail.com> (https://github.com/ScriptedAlchemy)",
  "contributors": [
    "Prasanna Mestha <prasanna@privjs.com> (https://github.com/prasannamestha)"
  ],
  "license": "MIT",
  "private": true,
  "pnpm": {
    "overrides": {
      "concurrently": "^7.6.0",
      "cypress": "13.4.0",
      "webpack": "5.80.0",
      "@types/react": "18.0.38",
      "@types/react-dom": "18.0.11"
    }
  },
  "devDependencies": {
    "asn1": "^0.2.6",
    "abbrev": "^2.0.0",
    "@shelex/cypress-allure-plugin": "2.40.0",
    "allure-commandline": "2.24.1",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "cross-spawn": "7.0.3",
    "cypress": "13.5.1",
    "cypress-fill-command": "1.0.2",
    "cypress-real-events": "1.11.0",
    "cypress-wait-until": "2.0.1",
    "forever": "4.0.3",
    "husky": "7.0.4",
    "jest": "26.6.3",
    "lerna": "^6.6.2",
    "mocha": "10.2.0",
    "moment": "2.29.4",
    "prettier": "2.8.8",
    "pretty-quick": "3.1.3",
    "serve": "14.2.1",
    "wait-on": "7.2.0",
    "@types/node": "20.9.0",
    "typescript": "5.2.2"
  },
  "scripts": {
    "list:all": "pnpm list --filter \"*\" --only-projects --depth -1 --json",
    "list:changed": "pnpm list --filter \"...[origin/master]\" --only-projects --depth -1 --json",
    "build": "pnpm --filter --parallel build",
    "submodules": "git pull --recurse-submodules",
    "prettier": "prettier --write \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "prettier:check": "prettier --list-different \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "test": "jest test/index.spec.js --maxWorkers=2",
    "cypress:debug": "cypress open --e2e --config-file cypress-e2e/config/cypress.config.ts --browser=chrome",
    "cypress:run": "cypress run --config-file cypress-e2e/config/cypress.config.ts --browser=chrome",
    "report:generate": "allure generate ./cypress/results/allure-results --clean -o ./cypress/report",
    "report:open": "allure open ./cypress/report",
    "preinstall": "npx only-allow pnpm"
  }
}
